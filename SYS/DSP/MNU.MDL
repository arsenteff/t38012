.ITEM MNUCNT,,,<.WORD>,< >

MNUSAV: .WORD
MNUFIRST:: .WORD
MNUZAG:: .WORD
MNUSCNT: .WORD	;-    

MNUPRINT == 1
MNUSTS::.WORD

MNUSHOW::
	.SAVRON
	MOV	R0,-(SP)
	MOV	R0,R1
1$:
	ITM.FML R1,R2		; ?
	BNE	20$		;
	JMP	3$		;
20$:
	MOV	@#44,-(SP)
	BIS	#10000,@#44
	BIS	#MNUPRINT,MNUSTS
	CLR	MNUCNT
	MOV	R1,MNUSAV	;    
	MSG.TTL MNUZAG 		; ""
	STR.OUT 		; 

	ITM.PAR R1,R0
	BEQ	10$
	ITM.FML R0,R0
	BEQ	10$
	FML.TYP R0,R0
	BEQ	10$
	TYP.NAM R0,R3
	BEQ	10$

	STR.OUT	MNUZAG
	.PRINT	#DS$PRG
	MOV	R1,R0
	CALL	@R3
	.PRINT
	STR.OUT
	BR	11$
10$:
	MSG.TXT R1		; "> "
11$:
	CLR	MNUSCNT
	FML.LST R2,#MNUSTR	;     
	
	CMP	R1,#TS$TST
	BNE	30$
	MOV	#TPALL,R0
	BR	31$
30$:
	ITM.PAR R1,R0		;  
	ITM.FML R0,R0		;  
	BEQ	5$
	FML.TYP R0,R0		;  
	BEQ	5$
	TYP.CMD R0,R0		;  
	BEQ	5$
31$:	MSG.TXT R0		; "> "
5$:
	BIC	#MNUPRINT,MNUSTS
	CALL	MNUINP		;   
	MOV	(SP)+,@#44
	BCS	4$		;   ? 
	TST	R0		;    >=0?
	BPL	2$		;
	ITM.PAR R1,R1		;   
	BR	1$
2$:
	TSTB	R0		;  - "CNTRL" 
	BMI	6$
	MOV	R0,R3
	ITM.FML R1,R2		;    
	FML.CNT R2,R4		;  -    
	DEC R4
	CMP	R4,R3		;  
	BLT	1$

	FML.ITM R2,R3,R1	;     
	MOV MNUSAV,-4(R1)
	BR	100$

6$:
	CMP	R1,#TS$TST
	BNE	40$
	MOV	#TPALL,R0
	BR	41$
40$:
	ITM.PAR R1,R0		;  
	BEQ	100$
	ITM.FML R0,R0		;  
	BEQ	100$
	FML.TYP R0,R0		; ?
	BEQ	100$		;
41$:
	TYP.CMD R0,R2		; ?
	BEQ	100$		;
	MOV	R1,R0		;   

	CALL	@R2		;  
	BR	100$
3$:	
	TST	@R1
	BEQ	13$
	MSG.TXT R1
	ITM.PAR R1,R0
	CALL	@R1
	BR	14$
13$:
	MSG.ERR #ER$MITM	; -    
14$:
	TST	MNUSAV		; ?
	BEQ	4$		;
	MOV	MNUSAV,R1	;   
100$:	JMP	1$
4$:
	MOV	MNUFIRST,R1	; ୥ 
	BNE	100$
	MOV	(SP)+,R0
	RETURN

MNUSTR:
	CMP	MNUSCNT,#20.
	BLT	10$
	CALL	PAUSE2		;  20   
	CLR	MNUSCNT
10$:
	INC	MNUSCNT

	MOV	R1,-(SP)
	MOV	R0,-(SP)
	;STR.OUT #MN$NUM,R4
	ITM.FML R0,R0
	STR.OUT #MN$CNT,R0
	STR.OUT #MN$KEY,#MNUCNT ;   
	MOV	@SP,R1
	BEQ	2$
	ITM.PAR R1,R0
	BEQ	3$
	ITM.FML R0,R0
	BEQ	3$
	FML.TYP R0,R0
	BEQ	3$
	TYP.NAM R0,R1
	BEQ	3$
	MOV	@SP,R0
	CALL	@R1
	.PRINT
	BR	1$
3$:	STR.OUT #MN$NAM,@SP
1$:	STR.OUT
;;;	CALL	PAUSE
	INC	MNUCNT
	MOV	(SP)+,R0
	MOV	(SP)+,R1
	CLC
	RETURN
2$:	STR.OUT #MN$EMPTY
	BR	1$

	.ASCII <17><11>/[ ]/<200>
MNUKEY: MOV	R0,-(SP)
	MOV	@R0,R0
	ADD	#60,R0
	CMP	R0,#71
	BLE	1$
	ADD	#7,R0
1$:	MOVB	R0,MNUKEY-3
	MOV	(SP)+,R0
	MOV	#MNUKEY-6,R0
	CLC
	RETURN

MNUNUM: MOV	@R0,R0
	CLC
	RETURN

MNUNAM:
	ITM.NAM R0,R0
	CLC
	RETURN

MNUINP:
	MOV	@#44,-(SP)
	BIS	#10000,@#44
1$:	.TTINR
	BCS	1$
	CMP	R0,#177 ;?
	BEQ	3$
	CMP	R0,#33	;ESCAPE?
	BEQ	4$
	CMP	R0,#12
	BEQ	6$
	CMP	R0,#60
	BLT	1$
	SUB	#60,R0
	CMP	R0,#9.	;  "0-9"?
	BLE	2$
	CMP	R0,#17.
	BLT	1$
	SUB	#7,R0
	;;CMP	R0,#10.  ;  "A"?
	;;BLT	1$
	;;CMP	R0,#15.  ;  "F"?
	;;BGT	1$
2$:	CLC
5$:	MOV	(SP)+,@#44
	RETURN
6$:	BIS	#200,R0
	BR	2$
3$:	COM	R0
	BR	2$
4$:	SEC
	BR  5$

