S$FILE:
	TST	@#FILINP
	BNE	1$
	.PRINT  #MSG13			;  
	SEC
	RETURN
1$:	CALL	ANLFIL
	BCS	B$SYS
	MOV	R0,DLNFIL		;  
	BNE	2$
	.PRINT	#MSG6
	BR	B$SYS
2$:	CLR	N
	RETURN
