S$VRFY:
	MOV	R0,-(SP)
	MOV	#MSGCDT,R0
	CALL	STEPPRINT
	MOV	(SP)+,R0

	CALL	S$FILE
	BCS	F$C
	CALL	ANLPDP
1$:	CALL	S$BL
	CALL	V$BLK		;/     
