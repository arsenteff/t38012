S$LOAD:
	MOV	R0,-(SP)
	MOV	#MSGLDT,R0
	CALL	STEPPRINT
;;;	CALL	ASCFIL
;;;	.PRINT	#F$NAM
	MOV	(SP)+,R0

	BIC	#PGM,STATUS		;  
	BIC	#ERRQ,STATS2
        CALL	S$FILE                  ; 
	BCS	F$C
	CALL	ZPRPZU                  ;. ""
	CALL	ANLPDP                  ; Q-
1$:
        .TTINR
        BCS     5$
	JMP	PRGRETURN
5$:
	CALL	S$BL
	CALL	L$BLK			; /     
	INC	N

	CALL	PRCPRINT

	CMP	N,DLNFIL
	BLT	1$
	BIS	#PGM,STATUS		; 
	BIC	#MODPGM,STATUS
	BIT	#ERRQ,STATS2
	BNE	2$
	CALL	ASCFIL			;  
	MOVB	#17,F$NAM-1		; 
	BR	3$
2$:	MOV	#ERRPGM,R3		; LOAD
	MOV	#F$NAM-1,R5
	CALL	COPMSG
3$:	.CLOSE	#0
