;   *		   /	    		*
;   *************************************************************
;   <R5>  -      	
S$BL:	MOV	#10.,NERR
5$:	CLR @#177560		;   
	.READW	#AREA1,#0,#BLOCK,#256.,N
	BCC	B$Z
	MOV #100,@#177560
	DEC	NERR
	BGT	5$
	.PRINT	#MSG7
B$SYS:	BIC	#PGM,STATUS		;  
	CLR	FILINP
CLOFIL: .CLOSE	#0
;;;	JMP	SYSVV
	SEC
	BIT     #OTLAD,STATUS
	BEQ	1$
	JMP	DIALOG
1$:	RETURN
B$Z:    MOV #100,@#177560
	RETURN

