ZAHVAT:
	BIT     #PDP,STATUS	;  Q-
	BNE     3$
	MOV     R0,-(SP)
	MOV	#QBZAHV,R0
	CALL	QBUSPROC
	BIT	#QSTSERROR,QBUSSTATUS
	BEQ	1$
	BIC     #PRC,STATUS
	.PRINT  #ERRMGS
	.PRINT  #ERRPZM
	BR      2$
1$:
        BIS     #PRC,STATUS     ;   
2$:	BIS     #PDP,STATUS     ; 
	MOV     (SP)+,R0
3$:	RETURN

ERRMGS:	.ASCIZ <16><15><12><11>/  /<17>
ERRPZM:	.ASCIZ <11><16>/     ""/<17><15><12>
	.EVEN


