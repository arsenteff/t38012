PUSK:
	MOV     R0,-(SP)

	CALL	ZAHVAT

	MOV	#177777,DANNY   ;  Q-
	BIT	#ZPRT,STATUS
	BNE	2$
	CALL	ZAPRET

	MOV	#QBPUSK,R0
	CALL	QBUSPROC

	CALL	OSVOB
	CALL	CLRZPR
1$:	MOV     (SP)+,R0
	RETURN
2$:
	MOV	#QBPUSK,R0
	CALL	QBUSPROC

	CALL	OSVOB
	BR	1$
PUSK2:
	MOV     R0,-(SP)
	MOV	#MSG.PUSK,R0
	CALL	STEPPRINT
	CALL	PUSK
	MOV     (SP)+,R0
	RETURN

MSG.PUSK:	.ASCII	<11><16>/ .  .../<15><17><200>
		.EVEN

