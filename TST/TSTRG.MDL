	.TITLE TSTRG.MDL

.ITEM MSGRGI,,,<.MSG <STRING>,NULL>,<  !>
.ITEM MSGRGO,,,<.MSG <STRING>,NULL>,<  !>
.ITEM MSGRGA,,,<.MSG <NUMOCT>,STUB>,< : >

;********************************
.ITEM TRGINP,,$NDLOG,<>,<    >
;********************************
	.SAVRON
	CALL	ZAHVAT

	MOV	R0,R2

	CMP	@R2,#3			; -?
	BEQ	10$			;

	CMP	@R2,#1			; ?
	BNE	1$			;
10$:
	MOV	2(R2),ADRES
	CALL	INPUT

	BIT	#QSTSERROR,QBUSSTATUS
	BEQ	1$

	CALL	ERRORINC

	;  
	MSG.TXT	#TRGINP
	MSG.ERR #MSGRGI
	MSG.TXT #MSGRGA,2(R2)
	.PAUSE
	BCS	10$
1$:
	CLC
	RETURN


;********************************
.ITEM TRGOUT,,$NDLOG,<>,<    >
;********************************
	.SAVRON
	CALL	ZAHVAT

	MOV	R0,R2

	CMP	@R2,#3			; -?
	BEQ	10$			;

	CMP	@R2,#2			; ?
	BNE	1$			;
10$:
	CLR	DANNY
	MOV	2(R2),ADRES
	CALL	OUTPUT

	BIT	#QSTSERROR,QBUSSTATUS
	BEQ	1$

	CALL	ERRORINC

	;  
	MSG.TXT	#TRGOUT
	MSG.ERR #MSGRGO
	MSG.TXT #MSGRGA,2(R2)
	.PAUSE
	BCS	10$
1$:
	CLC
	RETURN

